<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0026CA</item>
        <item name="colorPrimaryDark">#0026CA</item>
        <item name="colorAccent">#0026CA</item>
        <item name="colorButtonNormal">#0026CA</item>
    </style>

    <!-- Styling the properties of the quiz questions. -->
    <style name="QuestionsTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Styling questions headings. -->
    <style name="QuestionsHeadingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#0026CA</item>
    </style>

    <!-- Styling the check boxes. -->
    <style name="CheckBoxesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">45dp</item>
    </style>

    <!-- styling the radioGroup. -->
    <style name="RadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">45dp</item>
    </style>

    <!-- Styling the buttons. -->
    <style name="ButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Styling the introduction text. -->
    <style name="IntroTextStyles">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Styling the editText views. -->
    <style name="EditTextViewStyles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
